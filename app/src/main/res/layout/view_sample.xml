<?xml version="1.0" encoding="utf-8"?>
<io.github.declanw3.colourfall.SampleView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    >
    <TextView
        android:id="@+id/colorText"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="RGB(255, 255, 255)"
        />
    <Button
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/colorText"
        android:layout_centerVertical="true"
        android:text=">"
    />
    <Button
        android:id="@+id/moveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/lockButton"
        android:text="MOVE"
        android:stateListAnimator="@null"
        />
    <Button
        android:id="@id/lockButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="LOCK"
        android:stateListAnimator="@null"
        />
    <io.github.declanw3.colourfall.EditView
        android:id="@+id/editView"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/editButton"
        android:backgroundTint="@color/colorPrimaryDark"
        android:backgroundTintMode="multiply"
        />
</io.github.declanw3.colourfall.SampleView>